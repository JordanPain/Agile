<div class="alt-layout container">
  <div class="row">
    <div class="col-xs-12 col-lg-12">
      <img src="../assets/banner_1200.png" class="img-responsive">
    </div>
  </div>

  <h2>Sign up</h2>

  <div class="col-xs-12 col-lg-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :userName %><br>
          <%= f.text_field :userName, class: "form-control" %>
        </div>

        <%= f.label :gender %><br>
        <div class="field radio-inline">
          <%= f.radio_button :gender, "male" %>
          <label>Male</label>
        </div>

        <div class="field radio-inline">
          <%= f.radio_button :gender, "female" %>
          <label>Female</label>
        </div>

        <div class="field form-group">
          <%= f.label :firstName %><br>
          <%= f.text_field :firstName, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :lastName %><br>
          <%= f.text_field :lastName, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :birthdate %><br>
          <%= f.date_field :birthdate, value: (Time.now - 18.years).to_date, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :city %><br>
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="fieldform-group">
          <%= f.label :state %><br>
          <%= f.text_field :state, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :zip %><br>
          <%= f.number_field :zip, class:"form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :about %><br>
          <%= f.text_area :about, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-default" %>
        </div>
    <% end %>
  </div>


  <br>
  <br>
</div>
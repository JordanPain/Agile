
<div class="table-responsive">
<table class="table table-condensed">
  <thead>
  <tr>
    <th>Email</th>
    <th><%= smart_listing.sortable "Username", :userName %></th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Birthdate</th>
    <th>Age</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th class="xs-hidden sm-hidden">About</th>
    <th>Gender</th>
    <th>Admin</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% smart_listing.collection.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.userName %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.birthdate %></td>
        <td><%= userAge( user.birthdate) %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip %></td>
        <td class="xs-hidden sm-hidden"><%= user.about %></td>
        <td><%= user.gender %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>